@model IEnumerable<WebLab1_Levchenko.Models.CartItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Корзина</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/Images/@item.Cats.Image" alt="No image" width="100" />

            </td>
            <td>
                @Html.DisplayFor(m => item.Cats.CatsName) { /* id=item.PrimaryKey */ })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a asp-controller="Cart"
                   asp-action="Delete"
                   asp-route-id="@item.Cats.CatsID"
                   class="btn btn-outline-danger">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
        </tr>}
    </tbody>
</table>
